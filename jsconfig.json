{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "checkJs": true,
        "allowUmdGlobalAccess": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "**/node_modules/**",
        "**/dist/**",
        "**/.git/**",
        "public/lib/**",
        "backups/**",
        "data/**",
        "cache/**",
        "src/tokenizers/**",
        "docker/**"
    ]
}
